div(class="bg-white shadow rounded-lg")
    img(src=`/uploads/${propiedad.imagen}`, alt=`imagen de propiedad ${propiedad.titulo}` class="object-cover h-72 w-full")
    div(class="p-5 space-y-3")
        h3(class="text-2xl font-bold text-center")= propiedad.titulo 
        p(class="text-gray-600 text-md font-bold") Habitaciones 
            span(class="text-gray-800 font-bold")= propiedad.habitaciones
        p(class="text-gray-600 text-md font-bold") WC  
            span(class="text-gray-800 font-bold")= propiedad.wc
        p(class="text-gray-600 text-md font-bold") Precio 
            span(class="text-gray-800 font-bold")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center block font-bold p-2 uppercase text-white rounded-lg") Ver Propiedad