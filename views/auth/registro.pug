extends ../layout/index

block contenido
    a(href="/" class="w-full bg-indigo-600 font-bold rounded-lg text-yellow-50 hover:bg-indigo-900 mt-5 py-2 text-xl cursor-pointer mx-10 p-5") Inicio
    div.py-10
        h1.text-center.my-10.font-extrabold.text-4xl Bienes
            span.font-normal Raices 
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST", action="/auth/registro")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold.mt-2(for="email") Tu correo
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email" value= usuario ? usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold.mt-2(for="password") Tu Password
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold.mt-2(for="password") Repetir Password
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu Password" type="password" name="password2")

                    div.flex.items-center.justify-between.font-bold.mt-4
                        a.text-gray-500.text-xs(href="/auth/login") Â¿Ya tienes cuenta? Inicia Sesion
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password

                    input(class="w-full bg-indigo-600 font-bold rounded-lg text-yellow-50 hover:bg-indigo-900 mt-5 py-2 text-xl cursor-pointer" type="submit" value="Crear Cuenta")