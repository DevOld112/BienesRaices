extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div(class="py-5 px-5")
        h1(class="text-4xl text-center font-extrabold mx-auto ") Ubicac√≠on en el Mapa

        div(class="flex flex-col md:flex-row items-center py-10 gap-4")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar Propiedades:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias
                select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-lg shadow")
                    option(value="") --Seleccione-- 
                    each categoria in categorias
                        option(value=categoria.id)= categoria.nombre

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") Precios
                select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-lg shadow")
                    option(value="") --Seleccione-- 
                    each precio in precios
                        option(value=precio.id)= precio.nombre

        div(id="mapa-inicio" class="h-[500px] mt-5")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en venta 

            div(class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-14")
                each casa in casas
                    div(class="bg-white shadow rounded-lg")
                        img(src=`/uploads/${casa.imagen}`, alt=`imagen de casa ${casa.titulo}` class="object-cover h-72 w-full")
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold text-center")= casa.titulo 
                            p(class="text-gray-600 text-md font-bold") Habitaciones 
                                span(class="text-gray-800 font-bold")= casa.habitaciones
                            p(class="text-gray-600 text-md font-bold") WC  
                                span(class="text-gray-800 font-bold")= casa.wc
                            p(class="text-gray-600 text-md font-bold") Precio 
                                span(class="text-gray-800 font-bold")= casa.precio.nombre
                            a(href=`/propiedad/${casa.id}` class="bg-indigo-600 w-full text-center block font-bold p-2 uppercase text-white rounded-lg") Ver Propiedad

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Departamentos en venta 

            div(class="grid grid-cols-1 md:grid-cols-3 gap-5 mt-14")
                each departamento in departamentos
                    div(class="bg-white shadow rounded-lg")
                        img(src=`/uploads/${departamento.imagen}`, alt=`imagen de casa ${departamento.titulo}` class="object-cover h-72 w-full")
                        div(class="p-5 space-y-3")
                            h3(class="text-2xl font-bold text-center")= departamento.titulo 
                            p(class="text-gray-600 text-md font-bold") Habitaciones 
                                span(class="text-gray-800 font-bold")= departamento.habitaciones
                            p(class="text-gray-600 text-md font-bold") WC  
                                span(class="text-gray-800 font-bold")= departamento.wc
                            p(class="text-gray-600 text-md font-bold") Precio 
                                span(class="text-gray-800 font-bold")= departamento.precio.nombre
                            a(href=`/propiedad/${departamento.id}` class="bg-indigo-600 w-full text-center block font-bold p-2 uppercase text-white rounded-lg") Ver Propiedad
                            


block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js") 
    
